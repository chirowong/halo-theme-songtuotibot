                               <div class="param-text">
                                Palm I
                               </div>
                           </div>
                           <div class="param-box">
                                <div class="param-title">精度</div>
                                <div class="param-text">
                                    20µm
                                </div>
                            </div>
                            <div class="param-box">
                                <div class="param-title">感知范围</div>
                                <div class="param-text">
                                    Φ20mm
                                </div>
                            </div>
                            <div class="param-box">
                                 <div class="param-title">动态</div>
                                 <div class="param-text">
                                    15FPS
                                 </div>
                             </div>
                             <div class="param-box">
                                <div class="param-title">采样速度</div>
                                <div class="param-text">
                                    70ms
                                </div>
                            </div>
                            <div class="param-box">
                                 <div class="param-title">接口
