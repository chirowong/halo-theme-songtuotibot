    <main>
        <div id="fullPage">
            <div class="section section1" >
                <img class="bg-img" src="${theme_base!}/assets/images/home-slide3.png" />
                <div class="left-show">
                    <h1>高精度表面3D触觉数字化</h1>
                    <h3>
                        Palm Mobile系列
                    </h3>
                </div>
            </div>
            <div class="section section2">
                <div class="left-full-container pull-right">
                    <div class="img-container leftright">
                        <img src="${theme_base!}/assets/images/palm-desc.png" alt="">
